--recurse=yes
--tag-relative=yes
--exclude=.git
--exclude=.svn
--extra=+q

--langdef=Diff
--langmap=Diff:.diff.patch
--regex-diff=/^diff .* (b\/)?([^ ]+)$/\2/f,filename/

--regex-make=/^([^# \t]*):/\1/t,target/

--langdef=snippets
--langmap=snippets:.snippets
--regex-snippets=/^snippet (.*)/\1/s,snippet/
